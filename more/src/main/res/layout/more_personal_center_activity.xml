<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:padding="@dimen/qb_px_10">
            <ImageButton
                android:id="@+id/more_setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/more_user_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/qb_px_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号安全"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="密码管理"
                android:textSize="16sp"
                android:drawableRight="@drawable/more_right"
                android:drawablePadding="@dimen/qb_px_10"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/more_setting_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/qb_px_10"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原密码"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/more_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_edit_bg"
                    android:hint="原密码："
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/qb_px_39"
                    android:padding="@dimen/qb_px_5"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/qb_px_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置新密码"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/more_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:background="@drawable/more_edit_bg"
                    android:hint="设置新密码"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/qb_px_5"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/qb_px_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认新密码"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/more_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_edit_bg"
                    android:hint="确认新密码："
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="@dimen/qb_px_5"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/qb_px_10">
                <Button
                    android:id="@+id/more_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:background="@color/bg"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="#bebebe"/>
        <RelativeLayout
            android:id="@+id/more_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/qb_px_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/more_get_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/qb_px_20"
                />

            <ProgressBar
                android:id="@+id/more_clean_cache_loading"
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:src="@drawable/loading"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/qb_px_20"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@anim/base_loading_large_anim"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="#bebebe"/>
        <RelativeLayout
            android:id="@+id/more_now_versioncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/qb_px_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前版本"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/more_now_versionnames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:drawableRight="@drawable/more_right"
                android:drawablePadding="@dimen/qb_px_10"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="#bebebe"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/more_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/qb_px_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:layout_centerInParent="true"
            android:textColor="@color/red"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>