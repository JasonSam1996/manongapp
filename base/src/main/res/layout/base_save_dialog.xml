<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#11ffffff">

    <LinearLayout
        android:layout_width="@dimen/qb_px_260"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/base_usual_dialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/base_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/qb_px_15"
            android:gravity="center"
            android:text="温馨提醒"
            android:textColor="#38ADFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/base_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:text="是否保存？"
            android:autoLink="web"
            android:textColor="@android:color/black"
            android:textIsSelectable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/qb_px_15"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/base_btn_cancel"
                android:layout_width="@dimen/qb_px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="取消"
                android:textColor="#38ADFF"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />
            <Button
                android:id="@+id/base_btn_confirm"
                android:layout_width="@dimen/qb_px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="确认"
                android:textColor="#38ADFF"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>