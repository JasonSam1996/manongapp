<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/diary_bar_rbemoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/diary_face"
            android:drawablePadding="@dimen/qb_px_3"
            android:gravity="center"
            android:text="表情"
            android:textSize="12sp" />

        <Button
            android:id="@+id/diary_bar_rbphotograph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/diary_photograph"
            android:drawablePadding="@dimen/qb_px_3"
            android:gravity="center"
            android:text="拍照"
            android:textSize="12sp" />

        <Button
            android:id="@+id/diary_bar_rbpicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/diary_photo_album"
            android:drawablePadding="@dimen/qb_px_3"
            android:gravity="center"
            android:text="照片"
            android:textSize="12sp" />

        <Button
            android:id="@+id/diaay_bar_rblink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/diary_link"
            android:drawablePadding="@dimen/qb_px_3"
            android:gravity="center"
            android:text="链接"
            android:textSize="12sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/diary_emoji_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_200"
        android:visibility="gone"/>

</LinearLayout>
