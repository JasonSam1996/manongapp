<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/index_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/qb_px_10"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/index_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <RelativeLayout
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_2"
            android:background="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/index_month"
            android:layout_toStartOf="@id/index_month" />
        <RelativeLayout
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_2"
            android:background="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/index_month"
            android:layout_toEndOf="@id/index_month" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/index_image"
            android:layout_width="@dimen/qb_px_300"
            android:layout_height="@dimen/qb_px_300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/index_image_placeholder"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/index_image"
            android:layout_alignRight="@id/index_image"
            android:layout_alignStart="@id/index_image"
            android:layout_alignEnd="@id/index_image"
            android:padding="@dimen/qb_px_20">
            <ImageView
                android:id="@+id/index_weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/index_weather_text"
                android:layout_marginLeft="@dimen/qb_px_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_toRightOf="@id/index_weather_image"
                android:layout_marginStart="@dimen/qb_px_5"
                android:layout_toEndOf="@id/index_weather_image"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/index_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="@dimen/qb_px_5"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/index_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="120sp"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/qb_px_20"
            android:paddingRight="@dimen/qb_px_20"
            android:background="@drawable/index_day_bg"
            />

        <TextView
            android:id="@+id/index_dayWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/index_image"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/index_quotes"
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/qb_px_30"
            >
            <ImageView
                android:id="@+id/index_write_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/index_diary"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:src="@drawable/index_blog"/>
            <ImageView
                android:id="@+id/index_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/index_calendar"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
</LinearLayout>
