<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/index_bg"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/index_news_title_image"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_100"
        android:layout_margin="@dimen/qb_px_10"
        fresco:placeholderImage="@drawable/index_image_placeholder" />


        <TextView
            android:id="@+id/index_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/index_news_title_image"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            />


</RelativeLayout>
